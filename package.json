{
  "name": "",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cucumber": "./node_modules/cucumber/bin/cucumber-js tests/features/**/*.feature --require-module ts-node/register --require 'step-definitions/**/*.ts'",
    "start": "node ./build/src/index.js",
    "clean": "rm -rf ./build",
    "build": "npm run clean && npm run prettify && tsc",
    "test": "jest",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "prettify": "npx prettier --write 'src/**/*.ts'",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SBen-IV/tp-aninfo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SBen-IV/tp-aninfo/issues"
  },
  "homepage": "https://github.com/SBen-IV/tp-aninfo#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.13",
    "prettier": "^2.3.2",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.2.1",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/cucumber": "^6.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.13.52",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "concurrently": "^6.4.0",
    "cucumber": "^6.0.5",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.3.1",
    "jest-mock-extended": "^1.0.18",
    "nodemon": "^2.0.15",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "engines": {
    "node": "16.x"
  }
